<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:layout_margin="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="180dp"
    app:cardCornerRadius="20dp"
    android:layout_height="180dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:src="@drawable/futsal1out1"
            android:id="@+id/detailImage"/>

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/detailLapangan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Futsal" />

                <TextView
                    android:layout_marginLeft="5dp"
                    android:id="@+id/detailJenis"
                    android:text="Outdoor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_launcher_background"
                    android:layout_width="15dp"
                    android:layout_height="15dp"/>

                <TextView
                    android:id="@+id/detailBintang"
                    android:layout_marginLeft="5dp"
                    android:text="4.7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <TextView
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:textSize="15dp"
                android:textColor="@android:color/background_dark"
                android:id="@+id/detailNama"
                android:textStyle="bold"
                android:text="Samba Futsal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/detailLove"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/icon_love" />

                <TextView
                    android:id="@+id/detailHarga"
                    android:layout_marginRight="5dp"
                    android:textColor="@color/colorPrimary"
                    android:textAlignment="textEnd"
                    android:layout_weight="1"
                    android:text="125K/Jam"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>



</androidx.cardview.widget.CardView>